<UserControl x:Class="VideoEditorUi.Views.SplitterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoEditorUi.Views"
        xmlns:CSVideoPlayer="clr-namespace:CSVideoPlayer;assembly=CSVideoPlayer"
        xmlns:controls="clr-namespace:MVVMFramework.Controls;assembly=MVVMFramework"
        mc:Ignorable="d"
        Height="580" Width="800">

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <CSVideoPlayer:VideoPlayerWPF Grid.Row="0" x:Name="player" VerticalAlignment="Top" HorizontalAlignment="Center" MediaOpened="Player_MediaOpened" MediaEnded="Player_MediaEnded"/>
    <controls:DefaultStackPanel Grid.Row="1">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Slider HorizontalAlignment="Left" Grid.Row="0" Width="760" Name="slider" Thumb.DragStarted="slider_DragStarted" Thumb.DragCompleted="slider_DragCompleted"/>
        <Grid Grid.Row="0" Name="grid" HorizontalAlignment="Left">
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>
          <ItemsControl ItemsSource="{Binding RectCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <Grid/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
          </ItemsControl>
        </Grid>
        <controls:DefaultStackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
          <controls:MediumButton Command="{Binding SeekBackCommand}" Content="{Binding SeekBackLabel}"/>
          <controls:ExtraSmallButton Command="{Binding PlayCommand}" Content="{Binding PlayLabel}"/>
          <controls:MediumButton Command="{Binding SeekForwardCommand}" Content="{Binding SeekForwardLabel}"/>
          <controls:ExtraSmallButton Command="{Binding PauseCommand}" Content="{Binding PauseLabel}"/>
          <controls:ExtraSmallButton Command="{Binding StopCommand}" Content="{Binding StopLabel}"/>
          <controls:LargeButton Command="{Binding SelectFileCommand}" Content="Click to select a file..." FontSize="12"/>
        </controls:DefaultStackPanel>
        <controls:DefaultStackPanel Grid.Row="2" Orientation="Vertical" Width="200">
          <CheckBox Content="Combine sections into one video?" IsChecked="{Binding CombineVideo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding CanCombine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          <CheckBox Content="Output to a different format?" IsChecked="{Binding OutputDifferentFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
          <ComboBox IsEditable="False" IsReadOnly="True" IsEnabled="{Binding OutputDifferentFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding Formats}" DisplayMemberPath="Name" SelectedValuePath="FormType" SelectedValue="{Binding FormatType, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </controls:DefaultStackPanel>
        <controls:DefaultStackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" >
          <controls:SmallButton Command="{Binding StartCommand}" Content="{Binding StartLabel}"/>
          <controls:SmallButton Command="{Binding EndCommand}" Content="{Binding EndLabel}"/>
          <controls:ExtraSmallButton Command="{Binding SplitCommand}" Content="{Binding SplitLabel}"/>
        </controls:DefaultStackPanel>
        <controls:DefaultStackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
          <controls:LargeTextBox IsReadOnly="True" Text="{Binding CurrentTimeString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </controls:DefaultStackPanel>
      </Grid>
    </controls:DefaultStackPanel>
  </Grid>
</UserControl>
